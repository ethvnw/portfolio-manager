{
    "openapi": "3.0.3",
    "info": {
        "title": "APEX Finance",
        "description": "Platform to manage financial portfolio",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local server"
        }
    ],
    "paths": {
        "/portfolio/user/{userId}": {
            "get": {
                "summary": "Get all portfolios for a user",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Portfolios found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "portfolios": {
                                            "type": "array",
                                            "items": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "No portfolios found for user" }
                }
            }
        },
        "/assets/portfolio/{portfolioId}": {
            "get": {
                "summary": "Get all assets in a portfolio",
                "parameters": [
                    {
                        "name": "portfolioId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Assets found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "assets": {
                                            "type": "array",
                                            "items": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "No assets found for portfolio" }
                }
            }
        },
        "/assets/category/{category}": {
            "get": {
                "summary": "Get assets by category in a portfolio",
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Assets found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "assets": {
                                            "type": "array",
                                            "items": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "No assets found in category" }
                }
            }
        },
        "/assets/ticker/{ticker}": {
            "get": {
                "summary": "Get assets by ticker in a portfolio",
                "parameters": [
                    {
                        "name": "ticker",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Assets found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "assets": {
                                            "type": "array",
                                            "items": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "No assets found with ticker" }
                }
            }
        },
        "/assets/type/{type}": {
            "get": {
                "summary": "Get assets by type in a portfolio",
                "parameters": [
                    {
                        "name": "type",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Assets found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "assets": {
                                            "type": "array",
                                            "items": { "type": "object" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "No assets found of type" }
                }
            }
        },
        "/assets/{ticker}/type": {
            "put": {
                "summary": "Change asset type",
                "parameters": [
                    {
                        "name": "ticker",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": { "description": "Asset type changed" },
                    "500": { "description": "Error changing asset type" }
                }
            }
        },
        "/assets/{ticker}": {
            "delete": {
                "summary": "Delete asset if sold",
                "parameters": [
                    {
                        "name": "ticker",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Asset deleted" },
                    "404": { "description": "Asset not found or not marked as sold" }
                }
            }
        },
        "/portfolio/{id}": {
            "delete": {
                "summary": "Delete portfolio if empty",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": { "description": "Portfolio deleted" },
                    "404": { "description": "Portfolio not found or not empty" }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "email": { "type": "string" },
                    "hashed_pass": { "type": "string" }
                }
            },
            "Portfolio": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "user_id": { "type": "integer" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "created_at": { "type": "string", "format": "date-time" }
                }
            },
            "Asset": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "portfolio_id": { "type": "integer" },
                    "ticker": { "type": "string" },
                    "name": { "type": "string" },
                    "category": { "type": "string" },
                    "quantity": { "type": "number", "format": "float" },
                    "buy_price": { "type": "number", "format": "float" },
                    "current_price": { "type": "number", "format": "float" },
                    "currency": { "type": "string" },
                    "purchased_at": { "type": "string", "format": "date-time" },
                    "type": { "type": "string", "enum": ["buy", "sell", "keep"] }
                }
            }
        }
    }
}