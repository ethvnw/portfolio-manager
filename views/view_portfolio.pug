extends layout 

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1 #{portfolio.name} Details
    .d-flex.gap-2
      a.btn.btn-outline-primary(href=`/portfolios/${portfolio.id}/sync`)
        i.bi.bi-arrow-clockwise.fst-normal &nbsp; Sync Prices
      a.btn.btn-primary(href=`/portfolios/${portfolio.id}/buy-asset`)
        i.bi.bi-plus-circle.text-light.fst-normal &nbsp; Add Asset
      a.btn.btn-secondary(href=`/portfolios/${portfolio.id}/sell-asset`)
        i.bi.bi-dash-circle.text-light.fst-normal &nbsp; Remove Asset

  table.table.table-hover.table-striped
    thead
      tr
        th Name
        th Ticker
        th Category
        th Quantity
        th Buy Price
        th Current Price
        th Buy Value
        th Current Value
    tbody
      each item in portfolioItems
        tr
          td= item.name
          td= item.ticker
          td(style="text-transform: capitalize;")= item.category
          td= item.quantity
          td= item.buy_price
          td= item.current_price > 0 ? item.current_price : "N/A"
          td= parseFloat(item.quantity * item.buy_price).toFixed(2)
          td= item.current_price > 0 ? parseFloat(item.quantity * item.current_price).toFixed(2) : "N/A"

