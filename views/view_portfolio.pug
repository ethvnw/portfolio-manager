extends layout 

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1 #{portfolio.name} Details
    .d-flex.gap-2
      a.btn.btn-primary(href=`/portfolios/${portfolio.id}/buy-asset`) Buy Asset
      a.btn.btn-secondary(href=`/portfolios/${portfolio.id}/sell-asset`) Sell Asset

  table.table
    thead
      tr
        th Name
        th Ticker
        th Category
        th Type
        th Quantity
        th Buy Price
        th Current Price
        th Buy Value
        th Current Value
    tbody
      each item in portfolioItems
        tr
          td= item.name
          td= item.ticker
          td(style="text-transform: capitalize;")= item.category
          td(style="text-transform: capitalize;")= item.type
          td= item.quantity
          td= item.buy_price
          td= item.current_price > 0 ? item.current_price : "N/A"
          td= item.quantity * item.buy_price
          td= item.current_price > 0 ? item.quantity * item.current_price : "N/A"

